{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "**/*tests*"
  ],
  "verbose": true,
  "execMap": {
    "js": "node",
    "ts": "ts-node"
  },
  "events": {
    "restart": "npm run lint",
    "exit": "echo \"exited process - via nodemon\"",
    "crash": "echo \"crashed process - via nodemon\""
  },
  "watch": [
    "**/"
  ],
  "ext": "json ts js"
}